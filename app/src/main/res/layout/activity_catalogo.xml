<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:text="Catálogo de Tonos"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout
        android:id="@+id/tableLayoutCatalogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:text="Negro 1.0"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#000000" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Castaño oscuro 7.2"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#5D4037" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Castaño claro 8"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#8D6E63" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Rubio 9.0"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#F3E5AB" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Rubio dorado 7.3"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFD700" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Rubio nacarado 7.2"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#FFFACD" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Rubio oscuro"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#C2B280" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Castaño profundo 5.0"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#4E342E" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Pelirrojo cobrizo"
                android:padding="12dp"
                android:textSize="18sp" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#B7410E" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnVolverMenu"
        android:text="Volver al menú"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
