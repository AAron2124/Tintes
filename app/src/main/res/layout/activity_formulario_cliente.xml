<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollFormularioCliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Campo: Nombre -->
        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <!-- Campo: Teléfono -->
        <EditText
            android:id="@+id/editTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone" />

        <!-- Campo: Fecha de aplicación -->
        <EditText
            android:id="@+id/editFechaAplicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de aplicación (dd/mm/aaaa)" />

        <!-- Campo: Tono de tinte -->
        <EditText
            android:id="@+id/editTonoTinte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tono de tinte" />

        <!-- Campo: Sugerencias -->
        <EditText
            android:id="@+id/editSugerencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sugerencias" />

        <!-- Campo: Complemento -->
        <EditText
            android:id="@+id/editComplemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Complemento" />

        <!-- Campo: Decolorante -->
        <EditText
            android:id="@+id/editDecolorante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Decolorante" />

        <!-- Campo: Fecha de retoque -->
        <EditText
            android:id="@+id/editFechaRetoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de retoque (dd/mm/aaaa)" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardarCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
