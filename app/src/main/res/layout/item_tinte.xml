<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Color del tinte como un View cuadrado -->
    <View
        android:id="@+id/viewColorTinte"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="#000000" /> <!-- Esto se cambiará dinámicamente -->

    <!-- Nombre y cantidad en vertical -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvNombreTinte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Tinte"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCantidadTinte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
