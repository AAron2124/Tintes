<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3EA"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guía para teñir tu cabello"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3B3B84"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Paso 1 - Preparar -->
        <LinearLayout
            android:id="@+id/btnPreparar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_preparar"
                android:contentDescription="Preparar"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preparar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3B3B84" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mezcla el tinte y el revelador en un recipiente."
                    android:textSize="14sp"
                    android:textColor="#3B3B84" />
            </LinearLayout>
        </LinearLayout>

        <!-- Paso 2 - Aplicar -->
        <LinearLayout
            android:id="@+id/btnAplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_aplicar"
                android:contentDescription="Aplicar"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aplicar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3B3B84" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usa una brocha para aplicar el tinte en tu cabello."
                    android:textSize="14sp"
                    android:textColor="#3B3B84" />
            </LinearLayout>
        </LinearLayout>

        <!-- Paso 3 - Esperar -->
        <LinearLayout
            android:id="@+id/btnEsperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_esperar"
                android:contentDescription="Esperar"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esperar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3B3B84" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deja actuar el tinte durante el tiempo recomendado."
                    android:textSize="14sp"
                    android:textColor="#3B3B84" />
            </LinearLayout>
        </LinearLayout>

        <!-- Paso 4 - Enjuagar -->
        <LinearLayout
            android:id="@+id/btnEnjuagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_enjuagar"
                android:contentDescription="Enjuagar"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enjuagar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#3B3B84" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enjuaga bien tu cabello con agua."
                    android:textSize="14sp"
                    android:textColor="#3B3B84" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
